{
  "ConfigVersion": "0.9",
  "PackageVersion": "",
  "PrereleaseInfo": "",
  "ArtifactsDest": "./dist",
  "Tasks": [
    "clean-destination",
    "xc",
    "copy-resources",
    "archive",
    "rmbin"
  ],
  "Os": "linux darwin windows",
  "Arch": "amd64",
  "Resources": {
    "Include": "README*,LICENSE*,INSTALL*",
    "Exclude": "*.go"
  },
  "BuildSettings": {
    "LdFlags": "-w -s",
    "LdFlagsXVars": {
      "TimeNow": "github.com/ntrv/check-aws-ec2-mainte/lib.buildDate"
    }
  },
  "TaskSettings": {
    "xc": {
      "autoRebuildToolchain": false,
      "validateToolchain": false,
      "verifyExe": false
    },
    "archive-tar-gz": {
      "include-top-level-dir": "!windows",
      "platforms": "linux"
    },
    "archive-zip": {
      "include-top-level-dir": "!windows",
      "platforms": "!linux,darwin,windows"
    }
  }
}
